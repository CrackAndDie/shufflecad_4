<UserControl x:Class="shufflecad_4.Controls.JoystickControls.LetterButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shufflecad_4.Controls.JoystickControls"
             mc:Ignorable="d" 
             d:DesignHeight="34" d:DesignWidth="34">
    <Grid>
        <Border Height="34" Width="34" CornerRadius="17">
            <Border.Background>
                <RadialGradientBrush x:Name="BorderGradient"
                        GradientOrigin="0.5,0.5" Center="0.5,0.5" 
                        RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="#FF151515" Offset="0.3" />
                    <GradientStop Color="#FF232323" Offset="0.7" />
                    <GradientStop Color="#FF313131" Offset="0.9" />
                    <GradientStop Color="#FF232323" Offset="1" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>
        <TextBlock x:Name="ButtonNameTB" Text="X" HorizontalAlignment="Center" FontSize="26"
                   VerticalAlignment="Center" Foreground="Red" TextAlignment="Center" Margin="0, 0, 0, 3"/>
    </Grid>
</UserControl>
