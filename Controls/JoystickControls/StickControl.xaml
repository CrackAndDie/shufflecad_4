<UserControl x:Class="shufflecad_4.Controls.JoystickControls.StickControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shufflecad_4.Controls.JoystickControls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="90">
    <Grid>
        <Border Width="70" Height="70" Background="DarkBlue" CornerRadius="35"/>
        <Grid x:Name="Stick"  Width="60" Height="60">
            <Border CornerRadius="30">
                <Border.Background>
                    <RadialGradientBrush 
                        GradientOrigin="0.5,0.5" Center="0.5,0.5" 
                        RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#FF232323" Offset="0.3" />
                        <GradientStop Color="#FF404040" Offset="0.9" />
                        <GradientStop Color="#FF232323" Offset="1" />
                    </RadialGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="OpacityBorder" CornerRadius="30" Background="Black" Opacity="0"/>
        </Grid>
    </Grid>
</UserControl>
