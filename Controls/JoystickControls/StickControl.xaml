<UserControl x:Class="shufflecad_4.Controls.JoystickControls.StickControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shufflecad_4.Controls.JoystickControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Border Width="50" Height="50" Background="DarkBlue" CornerRadius="25"/>
        <Border x:Name="Stick"  Width="35" Height="35" CornerRadius="18">
            <Border.Background>
                <RadialGradientBrush 
                        GradientOrigin="0.5,0.5" Center="0.5,0.5" 
                        RadiusX="0.5" RadiusY="0.5">
                    <GradientStop Color="#FF232323" Offset="0.3" />
                    <GradientStop Color="#FF404040" Offset="0.9" />
                    <GradientStop Color="#FF232323" Offset="1" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
