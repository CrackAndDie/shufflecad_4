<UserControl x:Class="shufflecad_4.Controls.JoystickControls.ButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shufflecad_4.Controls.JoystickControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">
    <Border Width="50" Height="55" CornerRadius="8, 8, 0, 0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#FF4E4E4E" Offset="0.0" x:Name="UpperStop"/>
                <GradientStop Color="#FF2B2B2B" Offset="0.4" />
                <GradientStop Color="#FF404040" Offset="1" x:Name="LowerStop"/>
            </LinearGradientBrush>
        </Border.Background>
    </Border>
</UserControl>
